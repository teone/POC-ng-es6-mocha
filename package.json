{
  "name": "ng-es6",
  "version": "1.0.0",
  "description": "POC Angular, Browserify and ES6 Modules",
  "main": "src/index.html",
  "scripts": {
    "test": "npm test",
    "browserify": "browserify src/app/index.js -t babelify -d --outfile dist/bundle.js",
    "server": "browser-sync start --files \"dist/main.css,dist/bundle.js,index.html\" --server ./ --reload-delay 1000",
    "watch": "watchify -t babelify src/app/index.js -o dist/bundle.js",
    "start": "npm run browserify && parallelshell \"npm run watch\" \"npm run server\""
  },
  "author": "Matteo Scandolo",
  "license": "ISC",
  "devDependencies": {
    "babel": "^5.8.23",
    "babelify": "^6.3.0",
    "browser-sync": "^2.9.3",
    "browserify": "^11.1.0",
    "eslint": "^1.4.1",
    "parallelshell": "^2.0.0",
    "watchify": "^3.4.0"
  },
  "dependencies": {
    "angular": "^1.4.5"
  }
}
